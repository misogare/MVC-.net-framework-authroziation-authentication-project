<!-- Register page that user will get redirected too -->
<!-- using the Register model -->
@using moore.Data.ViewModels;
@model RegisterVM;
<!-- setting title -->
@{ 
    ViewData["Title"] = "Sign up for a new account";
}
<!-- the message shown to Register to account-->
<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Sign up for a new account</h4>
        </p>
        <!-- error-->
        @if(TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"] </span>
                </div>
            }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Email form -->
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <!-- FirstName form -->
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <!-- LastName form -->
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <!-- Password form -->
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <!-- Password Confirmation form -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                   <label asp-for="IsSubscriptionPaid" class="control-label"></label>
                    <div class="form-check">
                        <input asp-for="IsSubscriptionPaid" class="form-check-input" />
                        <label asp-for="IsSubscriptionPaid" class="form-check-label">Paid subscription</label>
                    </div>
                    <span asp-validation-for="IsSubscriptionPaid" class="text-danger"></span>

                    <div class="form-group">
                        <!--Sign up Button-->
                        <input class="btn btn-outline-success float-right" type="submit" value="Sign up" />
                        <!-- if press cancel redirect to Home-->
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>