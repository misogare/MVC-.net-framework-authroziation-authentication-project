<!-- get the each item in application user then use foreach to itterate -->
@model IEnumerable<ApplicationUser>
<!--Users view to show all the users data and let admin modify it so only for admin role-->
@{
    ViewData["Title"] = "List of all users";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>List of all users</h4>
        </p>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                    <th>@Html.DisplayNameFor(model => model.LastName)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.FirstName)

                    </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.LastName)

                        </td>
                        <td>
                            <!-- show the options for each element dependant on item  -->
                             
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                            
                        </td>
                </tr>
                }
            </tbody>

        </table>

    </div>
</div>